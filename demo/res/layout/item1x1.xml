<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false" 
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/padding_item_top"
    android:paddingBottom="@dimen/padding_item_bottom"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="16dp"
        android:background="#F7F5DA" >

        <TextView
            android:id="@+id/leftContent1x1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:textSize="@dimen/item1x1_left_text_size"
            android:text="@string/post_text" />
        
        <TextView
            android:id="@+id/leftResource1x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/leftContent1x1"
            android:paddingBottom="5dp"
            android:text="@string/item_resource_text"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/item_resource_text_size" />

        <ImageView
            android:id="@+id/leftImage1x1"
            android:layout_width="@dimen/item1x1_left_image_width"
            android:layout_height="@dimen/item1x1_left_image_height"
            android:layout_below="@id/leftResource1x1"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/post_text"
            android:src="@drawable/placeholder" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:layout_weight="1">
        
        <TextView
            android:id="@+id/rightContent1x1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:textSize="@dimen/item1x1_right_text_size"
            android:text="@string/post_text" />
        
        <TextView
            android:id="@+id/rightResource1x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/rightContent1x1"
            android:paddingBottom="5dp"
            android:text="@string/item_resource_text"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/item_resource_text_size" />

        <ImageView
            android:id="@+id/rightImage1x1"
            android:layout_width="@dimen/item1x1_right_image_width"
            android:layout_height="@dimen/item1x1_right_image_height"
            android:layout_below="@id/rightResource1x1"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/post_text"
            android:src="@drawable/placeholder" />

    </RelativeLayout>

</LinearLayout>
