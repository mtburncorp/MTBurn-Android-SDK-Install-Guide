<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:paddingBottom="@dimen/padding_item_bottom"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/padding_item_top" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="16dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rightTopContent3x1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="@string/post_text"
            android:layout_weight="1"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:textSize="@dimen/item1x1_left_text_size" />
        
        <TextView
            android:id="@+id/rightTopResource3x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="@string/item_resource_text"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/item_resource_text_size" />

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F7F5DA"
            android:orientation="vertical" 
            android:paddingBottom="5dp"
        >
        <TextView
            android:id="@+id/rightMiddleContent3x1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxLines="3"
            android:text="@string/post_text"
            android:layout_weight="1"
            android:textStyle="bold"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:textSize="@dimen/item1x1_left_text_size" />
        
        <TextView
            android:id="@+id/rightMiddleResource3x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_resource_text"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/item_resource_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/rightBottomContent3x1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="@string/post_text"
            android:layout_weight="1"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:textSize="@dimen/item1x1_left_text_size" />
        
        <TextView
            android:id="@+id/rightBottomResource3x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="@string/item_resource_text"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/item_resource_text_size" />
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/leftImage3x1"
            android:layout_width="@dimen/item1x1_left_image_width"
            android:layout_height="@dimen/item1x1_left_image_height"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/post_text"
            android:paddingBottom="5dp"
            android:src="@drawable/placeholder" />
        
        <TextView
            android:id="@+id/leftContent3x1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/leftImage3x1"
            android:maxLines="3"
            android:textStyle="bold"
            android:text="@string/post_text"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:textSize="@dimen/item1x1_left_text_size" />
        
        <TextView
            android:id="@+id/leftResource3x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/leftContent3x1"
            android:paddingBottom="5dp"
            android:text="@string/item_resource_text"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/item_resource_text_size" />

    </RelativeLayout>

</LinearLayout>