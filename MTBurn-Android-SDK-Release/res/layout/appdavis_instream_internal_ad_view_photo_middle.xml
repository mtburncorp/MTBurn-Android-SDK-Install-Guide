<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/appdavis_instream_ph_m_ll_pb"
    android:paddingLeft="@dimen/appdavis_instream_ph_m_ll_pl"
    android:paddingRight="@dimen/appdavis_instream_ph_m_ll_pr"
    android:paddingTop="@dimen/appdavis_instream_ph_m_ll_pt" >

    <!-- ad frame -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- icon -->

        <FrameLayout
            android:layout_width="@dimen/appdavis_instream_ph_m_icon_image_w"
            android:layout_height="@dimen/appdavis_instream_ph_m_icon_image_h"
            android:layout_marginRight="@dimen/appdavis_instream_ph_m_icon_image_mr" >

            <ImageView
                android:id="@+id/appdavis_instream_advertiser_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/appdavis_instream_ad_image_desc"
                android:src="@drawable/appdavis_instream_placeholder" />

            <ProgressBar
                android:id="@id/appdavis_instream_advertiser_icon_indicator"
                style="@android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <!-- name -->

        <TextView
            android:id="@id/appdavis_instream_advertiser_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/appdavis_instream_ad_title"
            android:textColor="#ff0099cc"
            android:textSize="@dimen/appdavis_instream_ph_m_name_size"
            android:textStyle="bold" />
    </LinearLayout>
    
    <!-- ad sponsor -->
    
    <TextView
            android:id="@id/appdavis_instream_ad_sponsored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/appdavis_instream_ph_m_sponsored_ml"
            android:layout_marginRight="@dimen/appdavis_instream_ph_m_sponsored_mr"
            android:layout_gravity="right"
            android:singleLine="true"
            android:text="@string/appdavis_instream_ad_sponsored"
            android:textColor="@color/gray"
            android:textSize="@dimen/appdavis_instream_ph_m_sponsored_size" />

    <!-- image -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/appdavis_instream_ph_m_main_image_h"
        android:layout_marginBottom="@dimen/appdavis_instream_ph_m_main_image_mb"
        android:layout_marginTop="@dimen/appdavis_instream_ph_m_main_image_mt" >

        <ImageView
            android:id="@id/appdavis_instream_ad_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/appdavis_instream_ad_image_desc"
            android:src="@drawable/appdavis_instream_placeholder" />

        <ProgressBar
            android:id="@id/appdavis_instream_ad_indicator"
            style="@android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <!-- ad text -->

    <TextView
        android:id="@id/appdavis_instream_ad_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="@string/appdavis_instream_ad_desc"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/appdavis_instream_ph_m_desc_size" />

</LinearLayout>